<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BodhisattvaFriend" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Hintergrund wirklich weiß -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>

        <!-- standard Textfarbe schwarz -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Material-Farben einfach auf Schwarz/Weiß setzen -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- ganz wichtig: kein automatischer Dark-Mode -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

</resources>
