<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/FramePage">

    <TextView
        android:id="@+id/text_history_title"
        android:text="@string/praxis_bersicht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ActivityHeaderText" />

    <!-- Celebration zone -->
    <TextView
        android:id="@+id/text_history_headline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/text_history_headline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textStart"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingBottom="12dp" />

    <!-- Metrics table -->
    <LinearLayout
        android:id="@+id/layout_metrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <!-- Row: Today -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/text_row_today_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_today_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_today_status"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="viewEnd"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Row: Week -->
        <LinearLayout
            android:id="@+id/row_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/text_row_week_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_week_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_week_status"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="viewEnd"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Row: Month -->
        <LinearLayout
            android:id="@+id/row_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/text_row_month_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_month_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text=""
                android:textSize="18sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/text_row_month_status"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="viewEnd"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

    <!-- Suggestion row (clickable) -->
    <TextView
        android:id="@+id/text_history_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingBottom="14dp" />

    <!-- Streak row -->
    <TextView
        android:id="@+id/text_history_streak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:paddingBottom="18dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Buttons -->
    <Button
        android:id="@+id/button_show_last_practices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/ActionButton"
        android:text="@string/zeige_letzte_praxen" />

    <Button
        android:id="@+id/button_history_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        style="@style/TextLinkButton"
        android:text="@string/home" />

</LinearLayout>
