<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FramePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_header_text"
        style="@style/ActivityHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/einstellungen" />

    <!-- Content host: exactly one subpage visible at a time -->
    <FrameLayout
        android:id="@+id/settings_subpage_host"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <include
            android:id="@+id/settings_main_menu"
            layout="@layout/view_settings_main_menu" />

        <include
            android:id="@+id/settings_language_container"
            layout="@layout/view_settings_language" />

        <include
            android:id="@+id/settings_practice_container"
            layout="@layout/view_settings_practice" />

        <include
            android:id="@+id/goalsContainer"
            layout="@layout/view_settings_goals" />

        <include
            android:id="@+id/settings_manage_practices_container"
            layout="@layout/view_settings_manage_practices" />

        <include
            android:id="@+id/settings_system_container"
            layout="@layout/view_settings_system" />

    </FrameLayout>

    <!-- Pager controls (unused for now, will be used in Step 4) -->
    <LinearLayout
        android:id="@+id/settings_pager_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/pager_prev"
            style="@style/TextLinkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑" />

        <TextView
            android:id="@+id/pager_status"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="1/1" />

        <TextView
            android:id="@+id/pager_next"
            style="@style/TextLinkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↓" />
    </LinearLayout>

    <!-- Global footer always visible -->
    <include layout="@layout/view_footerbuttons" />

</LinearLayout>
